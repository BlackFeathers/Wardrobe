<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Frag3">

    <TextView
        android:id="@+id/set_topBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="#00BFFF"
        android:text="设置"
        android:textColor="#FFFFFF"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_clean"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/set_topBar"
        android:layout_marginTop="45dp"
        android:text="清理缓存"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:background="#FFFFFF" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/div_line"/>

    <Button
        android:id="@+id/btn_feedback"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/btn_clean"
        android:text="意见反馈"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:background="#FFFFFF"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/div_line"/>

    <Button
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/btn_feedback"
        android:text="分享"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:background="#FFFFFF"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/div_line"/>

    <Button
        android:id="@+id/btn_set"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/btn_share"
        android:text="设置"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:background="#FFFFFF"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/div_line"/>

    <Button
        android:id="@+id/btn_about"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/btn_set"
        android:text="关于"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:background="#FFFFFF" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/div_line"/>

</LinearLayout>